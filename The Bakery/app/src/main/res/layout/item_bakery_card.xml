<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bakery_main_card_view"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bakery_main_card_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_image_height_dimens"
            android:scaleType="centerCrop"
            android:src="@drawable/better_puddings"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/bakery_item_card_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:alpha="0.5" />
        <TextView
            android:id="@+id/bakery_item_card_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_title_height_dimens"
            android:layout_alignBottom="@+id/bakery_main_card_image"
            android:layout_marginLeft="@dimen/main_keylines_dimens"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>